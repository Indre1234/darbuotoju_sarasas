<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.byethost32.httpindre1234.darbuotoju_sarasas.NewWorkActivity"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Įvesti naują darbuotoją"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />



        <EditText
            android:id="@+id/new_work_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_work_name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <EditText
            android:id="@+id/new_work_socondname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_secondname" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />


        <EditText
            android:id="@+id/new_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_pay"
            android:inputType="number"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/new_personal_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_personal_code"
            android:inputType="numberSigned"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pareigos"/>


    <Spinner
        android:id="@+id/new_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/new_position"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_work_rating_data"/>

    <CheckBox
        android:id="@+id/rd_2014"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_2014"/>
    <CheckBox
        android:id="@+id/rd_2015"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_2015"/>
    <CheckBox
        android:id="@+id/rd_2016"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_2016"/>
    <CheckBox
        android:id="@+id/rd_2017"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_2017"/>

    <CheckBox
        android:id="@+id/rd_2018"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_2018"/>




    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/new_gender"/>
    <RadioGroup
            android:id="@+id/new_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_gender">

            <RadioButton
                android:id="@+id/women"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/women"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/men"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/men"/>
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/new_work_entry_button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/new_entry_work_button"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>


</ScrollView>







</LinearLayout>
